<form class="form-signin" method="POST" action="/login">
  <h2 class="form-signin-heading">Please Log In</h2>
  <label for="inputUsername" class="sr-only">Username</label>
  <input type="email" id="inputEmail" name="username" class="form-control" placeholder="Username" required autofocus>
  <label for="inputPassword"  class="sr-only">Password</label>
  <input name="password" id="inputPassword" type="password" class="form-control" placeholder="Password" required>

  {{#if message}}
  <div class="alert alert-success" role="alert">{{ message }}</div>
  {{/if}}

  {{#if error}}
  <div class="alert alert-danger" role="alert">{{ error }}</div>
  {{/if}}

  <button type="submit" class="btn btn-lg btn-primary btn-block">Log In</button>

</form>